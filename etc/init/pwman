/etc/init/pwman.conf                                                                                                                                                                     
description "uWSGI instance to serve pwman"

start on runlevel [2345]
stop on runlevel [!2345]

setuid www-data
setgid www-data


script
   cd /var/www/pwman/
   uwsgi --ini pwman-uwsgi.conf
end script

